% 情况。我们通过一个特殊的环境来完成检查。
%    \begin{macrocode}
\newenvironment { @@_test_env }
  { \bool_gset_false:N \g_@@_tmp_bool } { }
\AtEndEnvironment { @@_test_env }
  { \bool_gset_true:N \g_@@_tmp_bool }
