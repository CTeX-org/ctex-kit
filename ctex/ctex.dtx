          {
            \csuse { @end@#1@hook }
            \csname end#1 \endcsname
          } { }
          {
            \ctex_preto_cmd:NnTF \end { \csuse { @end@#1@hook } }
              { } { \ctex_patch_failure:N \end }
          }
      }
  }
\group_end:
\AtBeginDocument { \ctex_fix_end_env_hook: }
