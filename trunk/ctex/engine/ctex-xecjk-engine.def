% ctex-xecjk-engine.def: for XeTeX engine with xeCJK
% vim:ft=tex

% compatibility with amssymb.sty etc and xunicode.sty v0.95+
\def\CTEX@save@symlist{hbar,Finv,aleph,beth,gimel,daleth,Game}

\@for \reserved@a:=\CTEX@save@symlist \do{%
  \csletcs{CTEX@save@\reserved@a}{\reserved@a}}

\RequirePackage[BoldFont,normalindentfirst]{xeCJK}
\defaultfontfeatures{Ligatures=TeX}

\@for \reserved@a:=\CTEX@save@symlist \do{%
  \csletcs{UTF\reserved@a}{\reserved@a}
  \csletcs{\reserved@a}{CTEX@save@\reserved@a}
  \ifundef{\reserved@a}{\cslet{\reserved@a}\CTEX@undefined}{}
}
\let\CTEX@save@symlist\CTEX@undefined

\ifCTEX@punct
  \punctstyle{quanjiao}
\else
  \punctstyle{plain}
\fi

\input{ctex-cjk-common.def}

\ifCTEX@fontset
\InputIfFileExists{ctex-xecjk-\CTEX@fontset.def}%
  {\PackageInfo{ctex}{xeCJK fontset '\CTEX@fontset' is loaded.}}%
  {\PackageWarning{ctex}{xeCJK fontset '\CTEX@fontset' is undefined. Trying 'nofonts' fontset.}}
\fi

\endinput
