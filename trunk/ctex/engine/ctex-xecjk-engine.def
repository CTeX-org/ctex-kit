% ctex-xecjk-engine.def: for XeTeX engine with xeCJK
% vim:ft=tex

\RequirePackage[BoldFont,CJKnumber]{xeCJK}
\defaultfontfeatures{Mapping=tex-text}

\ifCTEX@punct
  \punctstyle{quanjiao}
\else
  \punctstyle{plain}
\fi

\input{ctex-cjk-common.def}

\ifCTEX@nofonts\else
  \ifCTEX@cjkfonts
    \input{ctex-xecjk-cjkfonts.def}
  \else\ifCTEX@winfonts
    \input{ctex-xecjk-winfonts.def}
  \else\ifCTEX@adobefonts
    \input{ctex-xecjk-adobefonts.def}
  \fi\fi\fi
\fi

\endinput
