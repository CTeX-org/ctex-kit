% ctex-xecjk-engine.def: for XeTeX engine with xeCJK
% vim:ft=tex

\RequirePackage[BoldFont,normalindentfirst]{xeCJK}
\defaultfontfeatures{Mapping=tex-text}

% undefine some math symbols from xunicode.sty v0.95+
% for compatibility with amssymb.sty etc
\def\reversed@b{hbar,Finv,aleph,beth,gimel,daleth,Game}
\@for \reversed@a:=\reversed@b \do{%
  \ifcsname\reversed@a\endcsname
    \expandafter\let \csname\reversed@a\endcsname \relax
  \fi}

\ifCTEX@punct
  \punctstyle{quanjiao}
\else
  \punctstyle{plain}
\fi

\input{ctex-cjk-common.def}

\ifCTEX@nofonts\else
  \ifCTEX@winfonts
    \input{ctex-xecjk-winfonts.def}
  \else\ifCTEX@adobefonts
    \input{ctex-xecjk-adobefonts.def}
  \fi\fi
\fi

\endinput
