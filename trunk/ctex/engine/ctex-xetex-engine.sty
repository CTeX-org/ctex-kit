% $Id$
% xetex-defs.sty: for XeTeX engine

\ProvidesFile{ctex-xetex-engine.sty}
  [2009/05/06 v0.9 ctex
   document class option]

\CTEX@GBKfalse % XeTeX always use UTF-8 as default encoding

\RequirePackage[BoldFont,CJKnumber]{xeCJK}
\defaultfontfeatures{Mapping=tex-text}

\ifCTEX@punct
  \punctstyle{quanjiao}
\else
  \punctstyle{plain}
\fi

\ifCTEX@nofonts\else
  \ifCTEX@cjkfonts
    \input{ctex-xetex-cjkfonts.sty}
  \else\ifCTEX@winfonts
    \input{ctex-xetex-winfonts.sty}
  \else\ifCTEX@adobefonts
    \input{ctex-xetex-adobefonts.sty}
  \fi\fi\fi
\fi

\input{ctex-cjk-common.sty}

\endinput

