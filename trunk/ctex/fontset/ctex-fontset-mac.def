% ctex-xecjk-macfonts.def
% Mac OS X 使用的华文字体 xeCJK 设置，GB18030 字符集

\providebool{CTEX@temp}

\ifCTEX@engine{xeCJK}{
  \setCJKmainfont[BoldFont=STHeiti,ItalicFont=STKaiti]{STSong}
  \setCJKsansfont[BoldFont=STHeiti]{STXihei}
  \setCJKmonofont{STFangsong}
  \setCJKfamilyfont{zhsong}{STSong}
  \setCJKfamilyfont{zhhei} {STHeiti}
  \setCJKfamilyfont{zhfs}  {STFangsong}
  \setCJKfamilyfont{zhkai} {STKaiti}
  \booltrue{CTEX@temp}
}{
\ifCTEX@engine{zhmCJK}{
  \setCJKmainfont[BoldFont=STHeiti.ttf,ItalicFont=STKaiti.ttf]{STSong.ttf}
  \setCJKsansfont[BoldFont=STHeiti.ttf]{STXihei.ttf}
  \setCJKmonofont{STFangsong}
  \setCJKfamilyfont{zhsong}{STSong.ttf}
  \setCJKfamilyfont{zhhei} {STHeiti.ttf}
  \setCJKfamilyfont{zhfs}  {STFangsong.ttf}
  \setCJKfamilyfont{zhkai} {STKaiti.ttf}
  \booltrue{CTEX@temp}
}{
  \boolfalse{CTEX@temp}
}}

\ifbool{CTEX@temp}{
  \def\CJKrmdefault{rm}
  \def\CJKsfdefault{sf}
  \def\CJKttdefault{tt}
  \newcommand*\songti  {\CJKfamily{zhsong}}  % 宋体
  \newcommand*\heiti   {\CJKfamily{zhhei}}   % 黑体
  \newcommand*\kaishu  {\CJKfamily{zhkai}}   % 楷书
  \newcommand*\fangsong{\CJKfamily{zhfs}}    % 仿宋
}{}

\endinput
