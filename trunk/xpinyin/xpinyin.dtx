%   \begin{syntax}
%     \cs{setpinyin} \Arg{汉字} \Arg{拼音}
%   \end{syntax}
%   \pkg{xpinyin} 宏包的拼音数据（\file{xpinyin-map.cfg}）来源于 \texttt{Unicode 6.1.0}
